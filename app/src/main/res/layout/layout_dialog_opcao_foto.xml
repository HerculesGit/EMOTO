<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--Titulo-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Selecione uma opção"
        android:textSize="20dp"
        />

    <!--Icones-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">


        
        <ImageView
            android:id="@+id/dialog_opcao_foto_camera"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@drawable/circlebackgroundpurple"
            android:src="@drawable/ic_photo_camera_24dp"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/dialog_opcao_foto_galeria"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@drawable/circlebackgroundblue"
            android:src="@drawable/ic_photo_24dp"
            android:clickable="true"
            />
    </LinearLayout>

    <!--Subtitulos-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="32dp"
            android:text="Câmera"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="16dp"
            android:text="Galeria"
            />


    </LinearLayout>



</LinearLayout>