<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".CadastroTaxi">

   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"

       >


      <android.support.design.widget.TextInputLayout
          android:id="@+id/input1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView6">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/dados_nome"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Nome"
             android:inputType="text" />
      </android.support.design.widget.TextInputLayout>

      <TextView
          android:id="@+id/textView6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:text="Dados Pessoais"
          android:textAppearance="@style/TextAppearance.AppCompat.Display1"
          android:textSize="24sp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <android.support.design.widget.TextInputLayout
          android:id="@+id/input2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/input1">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/dados_sobrenome"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Sobrenome"
             android:inputType="text" />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/editText_login_cpf"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/input2">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/dados_cpf"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="CPF"
             android:inputType="number" />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/input4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editText_login_cpf">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/dados_rg"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="RG"
             android:inputType="number" />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/input5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/input4">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/dados_cidade"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Cidade"
             android:inputType="text" />
      </android.support.design.widget.TextInputLayout>

      <TextView
          android:id="@+id/textView13"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:text="Dados de Acesso"
          android:textAppearance="@style/TextAppearance.AppCompat.Display1"
          android:textSize="24sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/input5" />

      <android.support.design.widget.TextInputLayout
          android:id="@+id/input6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView13">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/dados_email"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Email"
             android:inputType="text" />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/input7"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/input6">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/dados_senha"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Senha"
             android:inputType="text" />

      </android.support.design.widget.TextInputLayout>


      <android.support.design.widget.TextInputLayout
          android:id="@+id/editText_login_telefone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/input7">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/dados_telefone"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Telefone" />
      </android.support.design.widget.TextInputLayout>



      <TextView
          android:id="@+id/textView4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:text="Informações da Moto"
          android:textAppearance="@style/TextAppearance.AppCompat.Display1"
          android:textSize="24sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editText_login_telefone" />

      <android.support.design.widget.TextInputLayout
          android:id="@+id/input9"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView4">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/dados_marca"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Marca" />
      </android.support.design.widget.TextInputLayout>


      <android.support.design.widget.TextInputLayout
          android:id="@+id/input10"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/input9">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/dados_modelo"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Modelo" />
      </android.support.design.widget.TextInputLayout>


      <android.support.design.widget.TextInputLayout
          android:id="@+id/input11"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/input10">

         <android.support.design.widget.TextInputEditText
             android:id="@+id/dados_placa"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Placa" />
      </android.support.design.widget.TextInputLayout>

      <Button
          android:id="@+id/buttonConfirmarCadastro"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginTop="24dp"
          android:layout_weight="1"
          android:onClick="cadastrarMotoTaxi"
          android:text="@string/confirmacao"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/input11"
          app:layout_constraintVertical_bias="0.0" />



   </android.support.constraint.ConstraintLayout>

</ScrollView>

